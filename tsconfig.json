{
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "importsNotUsedAsValues": "remove",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "*": ["src/types/*"]
    },
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "ouput",
    "config",
    "workers/libs"
  ]
}